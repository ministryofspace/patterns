{% layout "patterns" %}
{% block content %}

<section class="slat">
  <div class="row">
    <div class="section-label">
      <div class="section-label_label">
        <h3 class="no-margin">Forms</h3>
      </div>
    </div>

    <div class="pattern-info">
      <div class="pattern-info_description">
        {% comment %}<h4 class="as-h4">.hero</h4>{% endcomment %}
        <p class="delta">Creating a form is designed to be easy but extremely flexible. Forms are built with a combination of standard form elements, as well as the Grid (rows and columns).</p>
      </div>
    </div>
  </div>
</section>

<section class="slat">
  <div class="row">
    <div class="large-12 large-centered columns">
      <h5>Full page forms: 12 column</h5>
        {% include "organisms/pattern-form" %}
    </div>
  </div>
 </section>

<section class="slat">
  <div class="row">
    <div class="large-9 large-centered columns">
      <h5>Inset page forms: 9 column</h5>
      {% include "organisms/pattern-form" %}
    </div>
  </div>
 </section>
{% endblock %}